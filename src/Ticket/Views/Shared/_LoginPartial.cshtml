@using Microsoft.AspNetCore.Identity
@using Ticket.Models

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Conta" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Gerenciamento" asp-action="Index" title="Gerenciamento">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Conta" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Conta" asp-action="Login">Log in</a></li>
    </ul>
}
