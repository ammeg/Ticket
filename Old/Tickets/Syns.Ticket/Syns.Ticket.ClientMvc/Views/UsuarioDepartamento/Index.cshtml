@{
    ViewBag.Title = "Index";
}


<input type="hidden" value="@Url.Action("Pesquisar", "UsuarioDepartamento")" id="pesquisarUrl" />
<input type="hidden" value="@Url.Action("Selecionar", "UsuarioDepartamento")" id="selecionarId" />

<h2>Index</h2>

<div>
    @Html.ActionLink("Inserir", "Inserir", null, new { @class = "btn btn-primary" })
</div>
<div class="row">
    <div class="col-md-6">
        <label>Usuário</label>
        <input type="text" id="nome" value="@ViewBag.Nome" />
    </div>
    <div class="col-md-6">
        <label>Departamento</label>
        <input type="text" id="descricao" value="@ViewBag.Descricao" />

    </div>

</div>

<table class="table table-bordered" id="tblUsuarioDepartamento">
    <thead>
        <tr>
            <td></td>
            <td>Usuario</td>
            <td>Departamento</td>
            <td>Responsável</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section styles {
    <link href="~/Scripts/DataTables-1.9.4/media/css/jquery.dataTables.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/jquery.dataTables.columnFilter.js"></script>
    <script src="~/Scripts/syns/UsuarioDepartamento/UsuarioDepartamento.Index.js"></script>
}