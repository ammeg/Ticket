@model List<Syns.Ticket.Business.Entities.DepartamentoEntity>
@{
    ViewBag.Title = "Index";
}


<input type="hidden" value="@Url.Action("Pesquisar", "Departamento")" id="pesquisarUrl" />
<input type="hidden" value="@Url.Action("Selecionar", "Departamento")" id="selecionarId" />

<h2>Index</h2>

<div>
    @Html.ActionLink("Inserir", "Inserir", null, new { @class = "btn btn-primary" })
</div>
<div>
    <label>Descrição:</label>
    <input type="text" id="descricao" value="@ViewBag.Descricao" />
</div>

<table class="table table-bordered" id="tblDepartamento">
    <thead>
        <tr>
            <td></td>
            <td>Descrição</td>
            <td>Sigla</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section styles {
    <link href="~/Scripts/DataTables-1.9.4/media/css/jquery.dataTables.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/jquery.dataTables.columnFilter.js"></script>
    <script src="~/Scripts/syns/Departamento/Departamento.Index.js"></script>
}