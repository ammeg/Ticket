@model Syns.Ticket.Business.Entities.DepartamentoEntity
@{
    ViewBag.Title = "Inserir";
}

<h2>Departamento</h2>


<input type="hidden" value="@Url.Action("DepartamentoDescricaoUrl", "Departamento")" id="DepartamentoDescricaoUrl" />
<input type="hidden" value="@Url.Action("DepartamentoIdUrl", "Departamento")" id="DepartamentoIdUrl" />


@using (Html.BeginForm())
{
    if (Model != null && Model.DepartamentoId != 0)
    {
        @Html.HiddenFor(a => a.DepartamentoId)
        @Html.HiddenFor(a => a.UsuarioCadId)
        @Html.HiddenFor(a => a.DataHoraCad)
        @Html.HiddenFor(a => a.Ativo)
    }
    <div>
        <div>
            @Html.LabelFor(u => u.Descricao)
            @Html.EditorFor(u => u.Descricao)
        </div>
        <div>
            @Html.LabelFor(u => u.Email)
            @Html.EditorFor(u => u.Email)
        </div>
        <div>
            @Html.LabelFor(u => u.Sigla)
            @Html.EditorFor(u => u.Sigla)
        </div>
        <div>
            @Html.LabelFor(u => u.DepartamentoMasterId)
            @Html.HiddenFor(u => u.DepartamentoMasterId)
            <input type="text" id="DepartamentoDescricao" />
        </div>
    </div>
    <br />
    <div class="button">
        <input class="btn btn-primary" type="submit" value="Salvar" />
    </div>
}
@section styles {
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/jquery-ui-1.10.4.js"></script>
    <script src="~/Scripts/syns/Departamento/Departamento.Autocomplete.js"></script>
    <script type="text/javascript">
        $("#DepartamentoDescricao").departamento({
            departamentoId: $("#DepartamentoMasterId")
        });
    </script>
}